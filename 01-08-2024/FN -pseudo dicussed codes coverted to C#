// 6. ReadAndCountDoctorsMin6DigitsSalaried(): without array 

psuedo

function ReadAndFindMinSalaryOfNDoctors():
    MinSalary = -1
    Input N //number of salaries 
    for I = 1 .. N 
        Input salary
        if I == 1 then 
             MinSalary = salary 
             continue 
        end if 

        if salary < MinSalary then 
            MinSalary = salary
        end if 

C#

static bool IsDoctorSalaryMin6Digits(int doctorSalary)
    {
        int salary = doctorSalary;

        int count = 0;
        while (salary > 0)
        {
            int digit = salary % 10;
            count += 1;
            salary = salary / 10;
        }

        return count >= 6;
    }

static void ReadAndCountDoctorsMin6DigitsSalaried(): 
{
    int count = 0;
    Console.WriteLine("Number of salaries :");
    int size = int.Parse(Console.ReadLine());  
     for (int i = 0; i < size; i++)
        {
            Console.WriteLine($"Enter salary of {i + 1} :");
            int salary = int.Parse(Console.ReadLine());
            isMin6Digits = IsDoctorSalaryMin6Digits(salary)
            if isMin6Digits
            {
                count += 1; 
            }
        }
}


7. ReadAndFindMinSalaryOfNDoctors() without array

pseudo

function ReadAndFindSumOfDoctorsSalariesTillZero()
    sum = 0 
    do 
        input salary 
        if !(salary > 0 || salary == 0) //Invalid salary
            print "Input valid salary"
            continue 
        end if 
        sum += salary 
    while salary != 0
    print sum 


C#
static void ReadAndFindMinSalaryOfNDoctors()
    {
        int MinSalary = -1;
        Console.WriteLine("Number of salaries :");
        int size = int.Parse(Console.ReadLine());
        for (int i = 0; i < size; i++)
        {
            Console.WriteLine($"Enter salary of {i + 1} :");
            int salary = int.Parse(Console.ReadLine());
            if (i == MinSalary)
            {
                MinSalary = salary;
                continue;
            }
            if (salary < MinSalary)
            {
                MinSalary = salary;
            }
        }
    }
}

8. ReadAndFindSumOfDoctorsSalariesTillZero() use do..while loop 

pseudo

function ReadAndFindSumOfDoctorsSalariesTillZero()
    sum = 0 
    do 
        input salary 
        if !(salary > 0 || salary == 0) //Invalid salary
            print "Input valid salary"
            continue 
        end if 
        
        if salary != 0 // Business Rule 
            sum += salary
        end if  
    while salary != 0
    print sum 

C#
static void ReadAndFindSumOfDoctorsSalariesTillZero()
{
      int sum = 0
      do
      {
          Console.WriteLine("Number of salaries :");
          int salary = int.Parse(Console.ReadLine());       //input salary 
          if !(salary > 0 || salary == 0)                  //Invalid salary
          {
                Console.WriteLine("Input valid salary");
                continue;
          } 
        if (salary != 0 )                                 // Business Rule
        {
            sum += salary;
        }  
        }while salary != 0
     Console.WriteLine($" Sum of Salaries :{sum});  
}

9. ReadAndFindSumOfDoctorsSalariesTillZero() use while loop 

pseudo

function ReadAndFindSumOfDoctorsSalariesTillZero()
    sum = 0 
    input salary
    while salary != 0
        if (salary < 0) //Invalid salary
            print "Input valid salary"
            input salary
            continue
        end if         
        
        sum += salary
        input salary
    end while 
    print sum 


C#
static void ReadAndFindSumOfDoctorsSalariesTillZero()
{
      int sum = 0;
      Console.WriteLine("Enter salary :");
      int salary = int.Parse(Console.ReadLine());
      while (salary != 0)
      {
        if !(salary < 0 )                                //Invalid salary
          {
                Console.WriteLine("Input valid salary");
                Console.WriteLine("Enter salary :");
                int salary = int.Parse(Console.ReadLine());
                continue;
          } 
        sum += salary;
        Console.WriteLine("Enter salary :");
        int salary = int.Parse(Console.ReadLine());
      }
      Console.WriteLine($" Sum of Salaries :{sum});
}
